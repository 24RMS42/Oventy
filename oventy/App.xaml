<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="oventy.App">
    <Application.Resources>
		<ResourceDictionary>
    		<x:Double x:Key="BaseFontSize">16</x:Double>
            <Color x:Key="LightBlueColor">#10aec4</Color>
            <Style x:Key="MainButtonStyle" TargetType="Button">
                <Setter Property="FontSize" Value="{StaticResource BaseFontSize}" />
                <Setter Property="HeightRequest">
                    <Setter.Value>
                        <OnPlatform x:TypeArguments="x:Double" 
                            Android="50" 
                            iOS="35"
                            WinPhone="40"/>
                    </Setter.Value>
                </Setter>
                <Setter Property="WidthRequest" Value="50" />
                <Setter Property="BorderWidth" Value="1" />
                <Setter Property="BorderRadius" Value="6" />
                <Setter Property="BackgroundColor" Value="{StaticResource LightBlueColor}" />
                <Setter Property="BorderColor" Value="{StaticResource LightBlueColor}" />
                <Setter Property="TextColor" Value="White" />
            </Style>
		</ResourceDictionary>	
    </Application.Resources>
</Application>
