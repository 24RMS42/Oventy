<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="oventy.SettingsPage"
             Title="Settings">
    <StackLayout>
        <Label Text="Settings"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
        <Button x:Name="LogoutButton" Text="Log Out" VerticalOptions="End" HorizontalOptions="Start" BackgroundColor="Transparent" Clicked="Logout_Clicked" Margin="10, 0"/>
        </StackLayout>
</ContentPage>